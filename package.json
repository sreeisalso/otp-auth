{
	"name": "otp-auth",
	"description": "An authentication library, focuses on one time password over all other methods, for simplicity and robustness",
	"author": "Sreekanth Nagareddy <sreeisalso@gmail.com>",
	"devDependencies": {
		"@changesets/cli": "^2.29.5",
		"@changesets/get-github-info": "^0.6.0",
		"@changesets/types": "^6.1.0",
		"@types/node": "^24.2.1",
		"dotenv": "^17.2.1",
		"jsr": "^0.13.5",
		"prettier": "^3.6.2",
		"syncpack": "14.0.0-alpha.19",
		"taze": "^19.1.0",
		"tsdown": "^0.13.2",
		"tsx": "^4.20.3",
		"typescript": "^5.9.2"
	},
	"keywords": [],
	"license": "ISC",
	"packageManager": "pnpm@10.12.4",
	"private": false,
	"repository": {
		"url": "git+https://github.com/sreeisalso/otp-auth.git"
	},
	"scripts": {
		"build": "pnpm -r build",
		"build:changelog-formatter": "tsc .changeset/changelog-github-custom.ts && prettier .changeset/changelog-github-custom.js --write  && mv .changeset/changelog-github-custom.js .changeset/changelog-github-custom.cjs",
		"bump:version": "pnpm change version && pnpm -r version:jsr",
		"change": "pnpm changeset",
		"deps": "pnpm upgrade -i -r --latest && syncpack fix && pnpm dedupe",
		"fix": "pnpm syncpack fix",
		"fmt": "prettier . --write && pnpm syncpack format",
		"publish:jsr": "pnpm -r publish:jsr",
		"publish:npm": "pnpm -r publish:npm",
		"push": "git push --follow-tags",
		"tag": "pnpm changeset tag",
		"taze": "taze",
		"test": "pnpm -r test",
		"watch": "pnpm -r watch"
	},
	"type": "module",
	"workspaces": [
		"packages/*"
	]
}
